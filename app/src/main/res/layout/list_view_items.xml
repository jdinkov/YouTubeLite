<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listViewThumbnailPlayListItems"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/listViewImage"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="79dp"
        android:visibility="visible"
        app:srcCompat="@color/playlist_background" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listViewThumbnailPlayListItems"
        android:layout_alignBottom="@+id/listViewThumbnailPlayListItems"
        android:background="@color/playlist_background"
        android:gravity="end"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@android:color/background_light"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/listViewPlaylistItemCount"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="79dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/listViewTitlePlayListItems"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3" />

        <TextView
            android:id="@+id/textViewChannelTitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:textSize="12sp"
            android:textStyle="italic" />
    </RelativeLayout>

</RelativeLayout>
